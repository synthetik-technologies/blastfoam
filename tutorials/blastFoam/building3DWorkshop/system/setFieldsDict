FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

fields (alpha.c4);
nBufferLayers 2;

defaultFieldValues
(
    volScalarFieldValue alpha.c4 0
);


regions
(
    cylinderToCell // Use cylinder for 3D
    {
        p1 (0 0 0.25);
        p2 (0 0 0.75);
        radius 0.1;
        backup
        {
            p1 (0 0 0.0);
            p2 (0 0 1.0);
            radius 0.75;
        }
        refineInternal yes;
        level 5;

        fieldValues
        (
            volScalarFieldValue alpha.c4    1
        );
    }

    patchToFace // Refine walls
    {
        name wall;
        level 3;
        refineFaces yes;
    }
);


// ************************************************************************* //

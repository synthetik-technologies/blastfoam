FoamFile
{
  version     2.0;
  format      ascii;
  class       dictionary;
  location    "system";
  object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     blastFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         0.025;

writeControl    adjustableRunTime;

writeInterval   0.0005;

writeFormat     binary;

writePrecision  12;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

adjustTimeStep  yes;

deltaT          1e-8;

maxCo           0.5;

// ************************************************************************* //


functions
{
    impulse
    {
        type            impulse;
        writeControl    writeTime;
        writeInterval   1;

        pRef            101298;
    }
    speedOfSound
    {
        type            speedOfSound;
        writeControl    writeTime;
        writeInterval   1;

        store yes;
    }
    dynamicPressure
    {
        type            dynamicPressure;
        writeControl    writeTime;
        writeInterval   1;

        store yes;
    }
    overpressure
    {
        type            overpressure;
        writeControl    writeTime;
        writeInterval   1;

        pRef            101298;
        store yes;
    }
    fieldMax
    {
        type            fieldMax;
        writeControl    writeTime;
        writeInterval   1;

        fields
        (
            speedOfSound
            dynamicPressure
            overpressure
        );
    }

    pressureProbes
    {
        type            probes;
        writeControl   timeStep;
        writeInterval  1;

        probeLocations
        (
            (10 0 0)
            (20 0 0)
            (50 0 0)
            (100 0 0)
            (200 0 0)
            (500 0 0)
        );
        fields
        (
            p
            impulse
            dynamicPressure
        );
    }
}

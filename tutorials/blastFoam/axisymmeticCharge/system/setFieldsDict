FoamFile
{
  version     2.0;
  format      ascii;
  class       dictionary;
  location    "system";
  object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

fields (alpha.c4);
nBufferLayers 5;

defaultFieldValues
(
    volScalarFieldValue alpha.c4 0
);
regions
(
    sphereToCell
    {
        centre (0 0 0);
        radius 0.25;

        backup
        {
            centre (0 0 0);
            radius 1;
        }
        level 5;
        refineInternal yes;

        fieldValues
        (
            volScalarFieldValue alpha.c4 1
        );
    }
);


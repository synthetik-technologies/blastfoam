  | \\      /  F ield         | OpenFOAM: The Open Source CFD Toolbox           |
  |  \\    /   O peration     | Version:  2.3.0                                 |
  |   \\  /    A nd           | Web:      www.OpenFOAM.org                      |
  |    \\/     M anipulation  |                                                 |
  \*---------------------------------------------------------------------------*/
FoamFile
{
  version     2.0;
  format      ascii;
  class       dictionary;
  object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1; // feet to meters

theta   #calc "5.0*Foam::constant::mathematical::pi/180.0";

Ri       0.04445;
xip      #calc "$Ri*cos($theta)";
xin      #calc "-$Ri*cos($theta)";

Y       0.2286;

zip     #calc "$Ri*sin($theta)";
zin     #calc "-$Ri*sin($theta)";

vertices
(
    (0 0 0)
    ($xip 0 $zin)
    ($xip $Y $zin)
    (0 $Y 0)

    ($xip 0 $zip)
    ($xip $Y $zip)
);

blocks
(
    hex (0 1 2 3 0 4 5 3) fluid (50 200 1) simpleGrading (1 1 1)
 );

edges
(
);

boundary
(
    fixedWalls
    {
        type wall;
        faces
        (
            (0 1 4 0)
            (3 2 5 3)
        );
    }
    fluid_to_walls
    {
        type mappedMovingWall;
        sampleMode nearestPatchFace;
        sampleRegion walls;
        samplePatch walls_to_fluid;
        faces
        (
            (1 2 5 4)
        );
    }

    front
    {
        type wedge;
        faces
        (
            (0 1 2 3)
        );
    }
    back
    {
        type wedge;
        faces
        (
            (0 4 5 3)
        );
    }
 );

mergePatchPairs
(
);

// ************************************************************************* //

FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

fields (alpha.c4);

defaultFieldValues
(
    volScalarFieldValue alpha.c4 0
);


regions
(
    hemisphericalMassToCell
    {
        centre (0.0 0 1.0);
        mass   25.0;
        rho 1601;
        backup
        {
            centre (0.0 0 1.0);
            radius 2;
        }
        refineInternal yes;
        level 4;

        fieldValues
        (
            volScalarFieldValue alpha.c4    1
        );
    }
);


